<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/item_user_row_image_list"
            android:layout_width="375dp"
            android:layout_height="366dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/add_image" />

        <TextView
            android:id="@+id/item_user_row_name_list"
            android:padding="10dp"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_user_row_city_list"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:text="City..."
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/item_user_row_street_list"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:text="Street..."
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_user_row_description_list"
            android:padding="10dp"
            android:text="Description..."
            android:textAlignment="center"
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_user_row_type_list"
            android:padding="10dp"
            android:text="Type..."
            android:textAlignment="center"
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_user_row_username_list"
            android:padding="10dp"
            android:text="Added by"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_user_row_timestamp_list"
            android:padding="5dp"
            android:text="Date created"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/item_user_row_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/icon_edit" />

            <ImageButton
                android:id="@+id/item_user_row_map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/icon_goto_map" />

            <ImageButton
                android:id="@+id/item_user_row_comment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/icon_comments" />
        </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>